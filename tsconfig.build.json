{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "target": "es2022",
    "lib": ["es2022"],
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["**/src"],
  "exclude": ["**/node_modules", "**/dist", "**/test"]
}
